@using OnlineShop.Application.Services.HomePage.MenuItem
@model List<MenuItemDto>
@{
    Layout = null;
}

<nav class="collapse show navbar navbar-vertical navbar-light align-items-start p-0 border border-top-0 border-bottom-0" id="navbar-vertical">
    <div class="navbar-nav w-100 overflow-hidden" style="height: 410px">
        @foreach (var item in Model)
        {
            if (item.Child.Count > 0)
            {
                <div class="nav-item dropdown">
                    <a href="#" class="nav-link" data-toggle="dropdown">@item.Title <i class="fa fa-angle-down float-right mt-1"></i></a>
                    <div class="dropdown-menu position-absolute bg-secondary border-0 rounded-0 w-100 m-0">
                        @foreach (var submenu in item.Child)
                        {
                            <a href="" class="dropdown-item">@submenu.Title</a>
                        }


                    </div>
                </div>
            }
            else
            {
                <a href="" class="nav-item nav-link">@item.Title</a>
            }
        }

    </div>
</nav>
